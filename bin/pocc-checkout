use Switch;
use Term::ANSIColor;

## Some global variables.
#$BASEDIR = "/Users/pouchet/inria/projects/pocc";
#$BDIR_CO = "$BASEDIR";
#$REPOSITORIES = "$BDIR_CO/config/repositories.cfg";
$REPOSITORIES = "";
$BDIR_CO = ".";

## Args: soft name, destination directory, url
sub checkout_git
{
    my ($soft, $dir, $url) = @_;
    print "** Git cloning $soft (from $url) in $dir...\n";
    system("git clone $url $BDIR_CO/$dir/$soft/trunk");
}


## Args: soft name, destination directory, url
sub checkout_wget
{
    my ($soft, $dir, $url) = @_;
    print "** Wgetting $soft (from $url) in $dir...\n";
    system("mkdir -p $BDIR_CO/$dir/$soft && cd $BDIR_CO/$dir/$soft && wget $url");
    my @tmp = split(/\//, $url);
    my $filename = $tmp[$#tmp];
    if ($filename =~ /.tar.gz$|.tgz$/) {
	system("cd $BDIR_CO/$dir/$soft && tar xzf $filename");
    }
    else {
	if ($filename =~ /.zip$/) {
	    system("cd $BDIR_CO/$dir/$soft && unzip $filename");
	}
    }
}


## Args: soft name, destination directory, url, mode
sub checkout_svn
{
    my ($soft, $dir, $url, $mode) = @_;
    my $svnuser = "";
    $svnuser = "--username pocc --password pocc" if ($mode =~ /base/);
    print "** SVN checkouting $soft (from $url) in $dir...\n";
    system("svn co $url/trunk $BDIR_CO/$dir/$soft/trunk") if ($mode =~ /trunk/);
    system("svn co $url $BDIR_CO/$dir/$soft") if ($mode =~ /devel/);
    if ($mode =~ /base/) {
	system("svn co $svnuser $url/trunk $BDIR_CO/$dir/$soft/trunk");
    }
}


## Args: checkout method
sub checkout
{
#    my ($repos) = @_;
    my ($basedir, $repos) = @_;
    $BDIR_CO = $basedir;
    $REPOSITORIES = "$BDIR_CO/config/repositories.cfg";
    print (colored ("* Full checkout of PoCC. This may take a while...", "green green"), "\n");
    print "* Checkout mode: $repos\n";
    open FILE, "$REPOSITORIES" or die $!;
    while (<FILE>) {
	if ($_ !~ /^#/) {
	    my ($soft, $dir, $method, $url) = split(/[\t\s]+/, $_);
	    switch ($method) {
		case "svn"  { checkout_svn($soft, $dir, $url, $repos); }
		case "git"  { checkout_git($soft, $dir, $url); }
		case "wget" { checkout_wget($soft, $dir, $url); }
	    }
	}
    }
    print (colored ("* Checkout done", "green green"), "\n");
}

